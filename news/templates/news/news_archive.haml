- extends 'base.haml'
- load i18n

- block breadcrumbs
	%ul.breadcrumb
		%li
			- include 'home_link.haml'
		%li
			%a{'href': '{% url news:list %}'}
				{% trans "News" %}
-block content
	- block page_caption
		{% trans "Archive" %}
	%a{'href': '{% url news:archive %}'}
		="Archive"
	%a{'href': '{% url news:feed %}'}
		="Rss"
	%ul.news.unstyled
	- for object in queryset
		%li.news_item
			%a{'href': '{{ object.get_absolute_url }}'}
				%h2
					= object.title
			%p
				= object.body.excerpt|safe