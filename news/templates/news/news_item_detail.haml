- extends 'base.haml'
- load i18n

- block breadcrumbs
	%ul.breadcrumb
		%li
			- include 'home_link.haml'
		%li
			%a{'href': '{% url news:list %}'}
				{% trans "News" %}
		%li
			%a{'href': '{% url news:detail object.id %}'}
				{% trans object.title %}

-block content
	- block page_caption
		{% trans object.title %}
	%a{'href': '{% url news:archive %}'}
		="Archive"
	%a{'href': '{% url news:feed %}'}
		="Rss"
	%p
		= object.body.content|safe