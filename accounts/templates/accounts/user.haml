- extends 'base.haml'
- load i18n

- block breadcrumbs
    %ul.breadcrumb
        %li
            - include 'home_link.haml'
        %li
            %a{'href': '{% url users %}'}
                {% trans "Users" %}
        %li
            %a{'href': '{% url user user.pk %}'}
                = user

- block content
    - ifequal request.user user
        %form
            %fieldset
                .form-actions
                    %a.btn.{'href': '{% url profile %}'}
                        {% trans "This is you" %}
                    %a.btn.btn-primary{'href': '{% url edit_profile %}'}
                        {% trans "Edit Profile" %}
                    %a.btn.btn-primary{'href': '{%  url change_avatar %}'}
                        {% trans "Change avatar" %}

    %ul.thumbnails
        %li.thumbnail.avatar
            - if user.profile.avatar
                %a{'href': '{{ user.profile.avatar.url }}'}
                    - load fb_versions
                    %img.version200x200{'src': '{% version user.profile.avatar "200x200" %}'}
            - else
                %a{'href': '{% url change_avatar %}'}
                    %img.version200x200{'src': '{{ DEFAULT_AVATAR_URL }}', 'title': '{% trans "Avatar not set" %}'}
    %dl
        - for field in user_profile_form
            %dt
                = field.label
            %dd
                = field.value

